	/* dynamic pinmux overrides */
	aconnect@2a41000 {
		ahub {
			dmic@2904000 {
				nvidia,is-pinctrl = <1>;
				pinctrl-names = "dap_active", "dap_inactive";
				pinctrl-0 = <&dmic1_dap_active_state>;
				pinctrl-1 = <>;
			};
			dmic@2904100 {
				nvidia,is-pinctrl = <1>;
				pinctrl-names = "dap_active", "dap_inactive";
				pinctrl-0 = <&dmic2_dap_active_state>;
